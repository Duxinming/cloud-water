/* pages/list/list.wxss */
.background {
    /* height: 100vh; */
    background-color: #f2f3f4;
}

.img {
    width: 100vw;
    height: 30vh;
    background-color: #f2f3f4;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.infoimg {
    width: 20vw;
    height: 20vw;
    border-radius: 20vw;
    align-self: center;
}

.kong {
    height: 1.5vh;
}

.zong {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.article {
    width: 100vw;
    background-color: white;
    /* border-radius: 20rpx; */
}

.item {
    /* display: flex; */
    margin-left: 3vw;
    font-size: 90%;
    /* flex-direction: column;
    align-items: center; */
    margin-top: 2vh;
}

.item-time{
    display: flex;
}

.info {
    display: flex;
    height: 8vh;
    width: 100vw;
    border-bottom: 0.8px solid #f2f3f4;
    /* padding: 0.5vh; */
}

.infourl {
    width: 10vw;
    height: 10vw;
    border-radius: 10vw;
    align-self: center;
    margin-left: 3vw;
    /* margin-right: 5vw; */
}

.nickName {
    width: 68vw;
    line-height: 8vh;
    font-size: 80%;
    margin-left: 2vw;
    margin-right: 0vw;
    text-decoration: underline;
    overflow: hidden;
}

.down {
    width: 12vw;
    line-height: 8vh;
    font-size: 80%;
    margin-left: 1vw;
}

.loading {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.max {
    height: 5vh;
    font-size: 90%;
    text-align: center;
    line-height: 5vh;
    color: #ccc;
}
